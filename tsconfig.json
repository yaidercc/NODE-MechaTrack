{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "baseUrl": ".", 
    "paths": {
      "@common/*": ["src/common/*"],
      "@core/*": ["src/core/*"],
      "@config/*": ["src/config/*"]
    },
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
